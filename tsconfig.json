{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "target": "es6",
    "outDir": "esm",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "redi": ["./src/index.ts"],
      "redi/react": ["./src/redi-react/index.ts"],
    }
  },
  "include": ["src/**/*"]
}

