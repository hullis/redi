{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "target": "es5",
    "outDir": "esm",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@wendellhu/redi": ["./src/index.ts"],
      "@wendellhu/redi/react-bindings": ["src/react-bindings/index.ts"],
    },
  },
  "include": ["src/**/*"]
}

